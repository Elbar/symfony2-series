+    display: -moz-inline-box;
+    display: inline-block;
+    width: 120px;
+    font-size: 24px;
+}
+.login article input[type="text"], .login article input[type="password"] {
+    border: 1px solid #ccc;
+    font-size: 24px;
+    padding: 5px;
+    width: 264px;
+    -webkit-border-radius:3px;
+    -moz-border-radius:3px;
+    border-radius:3px;
+}
