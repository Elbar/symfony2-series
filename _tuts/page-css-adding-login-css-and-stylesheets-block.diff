+    float: right;
+}
+.login .error {
+    background-color: #ff6666;
+    color: #333;
+    -webkit-border-radius:5px;
+    -moz-border-radius:5px;
+    border-radius:5px;
+    padding: 5px 10px;
+    margin-bottom: 10px;
+}
