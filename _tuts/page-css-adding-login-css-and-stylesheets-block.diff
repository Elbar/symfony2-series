+.login {
+    width: 500px;
+    margin: 100px auto;
+}
+
+.login article {
+    padding: 50px;
+    background: #fff;
+    -webkit-border-radius:5px;
+    -moz-border-radius:5px;
+    border-radius:5px;
+}
+
